---
import type { Page } from 'astro';
import type { CollectionEntry } from 'astro:content';
import {
  Pagination,
  PaginationContent,
  PaginationPrevious,
  PaginationItem,
  PaginationNext,
  PaginationEllipsis,
} from '@/components/ui/pagination';

export type Props = {
  page?: Page<CollectionEntry<'posts'>>;
};

const { page } = Astro.props;
---

<nav class="mt-10">
  <Pagination>
    <PaginationContent>
      {
        page?.url?.prev && (
          <PaginationItem>
            <PaginationPrevious size="sm" isActive href={page?.url?.prev} />
          </PaginationItem>
        )
      }
      {
        page?.url?.prev && page?.url?.next && (
          <PaginationItem>
            <PaginationEllipsis />
          </PaginationItem>
        )
      }
      {
        page?.url.next && (
          <PaginationItem>
            <PaginationNext size="sm" isActive href={page?.url.next} />
          </PaginationItem>
        )
      }
    </PaginationContent>
  </Pagination>
</nav>
